# ========================================
# 余额告警系统 - 环境变量配置模板
# ========================================
# 复制此文件为 .env 并填入真实值
#
# 使用方法：
# 1. cp .env.example .env
# 2. 编辑 .env 填入真实的密钥和密码
# 3. 或运行 python migrate_config_to_env.py 从 config.json 自动提取

# ========================================
# 系统设置
# ========================================
BALANCE_REFRESH_INTERVAL_SECONDS=3600
MAX_CONCURRENT_CHECKS=5
MIN_REFRESH_INTERVAL_SECONDS=60
ENABLE_SMART_REFRESH=false
SMART_REFRESH_THRESHOLD_PERCENT=5

# ========================================
# Webhook 告警配置
# ========================================
WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/YOUR_WEBHOOK_TOKEN
WEBHOOK_SOURCE=credit-monitor
WEBHOOK_TYPE=feishu

# ========================================
# 邮箱配置（支持多个邮箱，用编号区分）
# ========================================
# 邮箱1 - 主邮箱
EMAIL_1_NAME=飞书邮箱
EMAIL_1_HOST=imap.feishu.cn
EMAIL_1_PORT=993
EMAIL_1_USERNAME=your-email@example.com
EMAIL_1_PASSWORD=your-email-password
EMAIL_1_USE_SSL=true
EMAIL_1_ENABLED=true

# 邮箱2（可选）
# EMAIL_2_NAME=Gmail邮箱
# EMAIL_2_HOST=imap.gmail.com
# EMAIL_2_PORT=993
# EMAIL_2_USERNAME=your-gmail@gmail.com
# EMAIL_2_PASSWORD=your-app-password
# EMAIL_2_USE_SSL=true
# EMAIL_2_ENABLED=true

# ========================================
# 项目监控配置（支持多个项目）
# ========================================
# OpenRouter 积分监控
PROJECT_1_NAME=OpenRouter
PROJECT_1_PROVIDER=openrouter
PROJECT_1_API_KEY=sk-or-v1-YOUR_API_KEY
PROJECT_1_THRESHOLD=100.0
PROJECT_1_TYPE=credits
PROJECT_1_ENABLED=true

# 微信排行积分监控
PROJECT_2_NAME=WxRank-微信公众号
PROJECT_2_PROVIDER=wxrank
PROJECT_2_API_KEY=your-wxrank-api-key
PROJECT_2_THRESHOLD=500.0
PROJECT_2_TYPE=credits
PROJECT_2_ENABLED=true

# 火山引擎余额监控
PROJECT_3_NAME=Volc-火山引擎
PROJECT_3_PROVIDER=volc
PROJECT_3_API_KEY=AKLT_YOUR_ACCESS_KEY:YOUR_SECRET_KEY_BASE64
PROJECT_3_THRESHOLD=7000
PROJECT_3_TYPE=balance
PROJECT_3_ENABLED=true

# 阿里云余额监控
PROJECT_4_NAME=Aliyun-阿里云
PROJECT_4_PROVIDER=aliyun
PROJECT_4_API_KEY=YOUR_ACCESS_KEY_ID:YOUR_ACCESS_KEY_SECRET
PROJECT_4_THRESHOLD=10000.0
PROJECT_4_TYPE=balance
PROJECT_4_ENABLED=true

# TikHub 积分监控
PROJECT_5_NAME=TikHub
PROJECT_5_PROVIDER=tikhub
PROJECT_5_API_KEY=your-tikhub-api-key
PROJECT_5_THRESHOLD=10.0
PROJECT_5_TYPE=credits
PROJECT_5_ENABLED=true

# 更多项目（PROJECT_6, PROJECT_7 等）
# 按照上述格式添加更多项目...

# ========================================
# 订阅续费提醒配置（支持多个订阅）
# ========================================
# 订阅1 - EMQX
SUBSCRIPTION_1_NAME=emqx - mqtt - 授权
SUBSCRIPTION_1_CYCLE_TYPE=monthly
SUBSCRIPTION_1_RENEWAL_DAY=9
SUBSCRIPTION_1_ALERT_DAYS_BEFORE=3
SUBSCRIPTION_1_AMOUNT=0
SUBSCRIPTION_1_CURRENCY=USD
SUBSCRIPTION_1_ENABLED=true

# 订阅2 - 融云
SUBSCRIPTION_2_NAME=融云 - im - 授权
SUBSCRIPTION_2_CYCLE_TYPE=monthly
SUBSCRIPTION_2_RENEWAL_DAY=17
SUBSCRIPTION_2_ALERT_DAYS_BEFORE=3
SUBSCRIPTION_2_AMOUNT=3500.0
SUBSCRIPTION_2_CURRENCY=CNY
SUBSCRIPTION_2_ENABLED=true
SUBSCRIPTION_2_LAST_RENEWED_DATE=2026-02-13

# 更多订阅（SUBSCRIPTION_3, SUBSCRIPTION_4 等）
# 按照上述格式添加更多订阅...

# ========================================
# Web 服务器配置（可选）
# ========================================
# WEB_PORT=8080
# WEB_HOST=0.0.0.0
# WEB_ENABLE_CORS=true
# WEB_API_KEY=your-web-api-key  # 访问 Web API 的认证密钥

# ========================================
# 日志配置（可选）
# ========================================
# LOG_LEVEL=INFO
# LOG_FILE=logs/balance_alert.log

# ========================================
# Prometheus 监控配置（可选）
# ========================================
# PROMETHEUS_PORT=9100
# PROMETHEUS_METRICS_PATH=/metrics
